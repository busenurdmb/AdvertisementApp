
@model List<AdvertisementListDtos>
@{ Layout = "_Layout";}
<div class="container-fluid">
    @{
        if (Model?.Count > 0)
        {
            <div class="text-end my-3 p-1">
                <a asp-action="Create" asp-controller="Application">Yeni İlan Oluştur</a>
               
            </div>

            <table class=" mt-3 table table-sm table-hover table-striped">
                <thead>
                    <tr>
                        <th> İlan Adı</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Durumu</th>
                        <th>İşlem</th>
                      
                    </tr>
                </thead>
                <tbody>
                    @foreach (var advertisemnet in Model)
                    {
                        <tr>
                            <td>@advertisemnet.Title</td>
                            <td>@advertisemnet.CreatDate</td>
                            <td>@(advertisemnet.Status?"Aktif":"Pasif")</td>
                           
                            <td>
                                <a asp-action="Update" asp-controller="Application" asp-route-Id="@advertisemnet.Id" >Güncelle</a>
                                <a asp-action="Remove" asp-controller="Application" asp-route-Id="@advertisemnet.Id">Sil</a>

                            </td>

                        </tr>
                    }

                </tbody>
            </table>
        }
        else
        {
<div class="text-end my-3 p-1">
    <a asp-action="Create" asp-controller="Application">Yeni İlan Oluştur</a>

</div>
            <div class="mt-3 text-center lead">
                herhangi bir başvuru bulunmamaktadır
            </div>
        }

    }
</div>